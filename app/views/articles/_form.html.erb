<%= form_for @article, html: { multipart: true} do |f| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2>
        <%= pluralize(@article.errors.count, "errors") %>:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="col-lg-9">
    <div class="form-group">
    <%= f.label :title, 'Заголовок' %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
 
  <div class="form-group">
    <%= f.label :text, 'Текст' %><br>
    <%= f.trix_editor :text, class: 'editor' %>
  </div>

  <div class="form-group">
    <%= f.label :category, 'Категории' %><br>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, {include_blank: true}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.file_field :image %>
  </div>
 
  <div class="form-group">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
  </div>
</div>
 
<% end %>