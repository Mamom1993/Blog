    <% @articles.each do |article| %>

    <h2><%= link_to article.title, article_path(article) %></h2>
    <%= image_tag article.image.url(:thumb), class: 'img-thumbnail thumb' if article.image? %>
      <p style="padding-bottom:30px;"><%= article.text %><br>
        <small>
        	<time><%= article.created_at.strftime("%Y-%m-%d") %></time> | 
        	<%= link_to 'Изменить', edit_article_path(article) %> | 
      		<%= link_to 'Удалить', article_path(article),
              method: :delete,
              data: { confirm: 'Вы уверены?' } %>
        </small></p>


 
  <% end %>